<entity>
import { Entity{{#if hasColumn}}, Column{{/if}}{{#if hasPrimaryGeneratedColumn}}, PrimaryGeneratedColumn{{/if}}{{#if hasPrimaryColumn}}, PrimaryColumn{{/if}} } from 'typeorm'

import { BaseEntity } from '@/common/entities/base.entity'

@Entity('{{ tableName }}')
export class {{ className }} extends BaseEntity {
{{#each tableColumns}}
  {{#if (eq this.isPrimaryKey 1)}}
    {{#if (eq this.isAutoIncrement 1)}}
  @PrimaryGeneratedColumn({
    name: '{{ this.columnNameUnderline }}',
    type: '{{ this.dataType }}'{{#if this.length}},
    length: {{ this.length }}{{/if}}{{#if this.comment}},
    comment: '{{ this.comment }}'{{/if}},
  })
    {{else}}
  @PrimaryColumn({
    name: '{{ this.columnNameUnderline }}',
    type: '{{ this.dataType }}'{{#if this.length}},
    length: {{ this.length }}{{/if}}{{#if this.comment}},
    comment: '{{ this.comment }}'{{/if}},
  })
    {{/if}}
  {{ this.columnName }}: {{ this.jsDataType }}{{#unless @last}}

{{/unless}}
  {{else}}
  @Column({
    name: '{{ this.columnNameUnderline }}',
    type: '{{ this.dataType }}'{{#if this.length}},
    length: {{ this.length }}{{/if}}{{#if (eq this.isNotNull 0)}},
    nullable: true{{/if}}{{#if (eq this.isAutoIncrement 1)}},
    generated: 'increment'{{/if}}{{#if this.comment}},
    comment: '{{ this.comment }}'{{/if}},
  })
  {{ this.columnName }}: {{ this.jsDataType }}{{#unless @last}}

{{/unless}}
  {{/if}}
{{/each}}

}
</entity>